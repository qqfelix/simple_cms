<div class="index">
    <h2>Sections</h2>
    <%= link_to "Add New Section", {:action => 'new'}, class: "btn btn-primary" %>

    <table class="table">
        <thead>
            <th>
                #
            </th>
            <th>
                Page ID
            </th>
            <th>
                Section
            </th>
            <th>
                Content Type
            </th>
            <th>
                Visible
            </th>
            <th>
                Actions
            </th>
        </thead>
        <tbody>
            <% @sections.each do |section| %>
                <tr>
                    <td>
                        <%= section.position %>
                    </td>
                    <td>
                        <%= section.page_id %>
                    </td>
                    <td>
                        <%= section.name %>
                    </td>
                    <td>
                        <%= section.content_type %>
                    </td>
                    <td>
                        <%= status_tag section.visible %>
                    </td>
                    <td>
                        <%= link_to "Show", {:action => 'show', :id => section.id }, class: "btn btn-primary" %>
                        <%= link_to "Edit", {:action => 'edit', :id => section.id }, class: "btn btn-primary" %>
                        <%= link_to "Delete", {:action => 'delete', :id => section.id }, class: "btn btn-primary" %>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>

</div>
